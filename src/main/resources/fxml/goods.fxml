<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.soft1841.sm.controller.GoodsController">
    <ListView layoutX="25.0" layoutY="107.0" prefHeight="700" prefWidth="1600">

    <FlowPane fx:id="goodsPane" hgap="10" vgap="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="150" />
    </ListView>



    <Button onAction="#newGoodsStage" styleClass="green-theme" text="新增商品" AnchorPane.leftAnchor="50" AnchorPane.topAnchor="5" />

    <ComboBox fx:id="typeComboBox" promptText="选择商品类别" AnchorPane.leftAnchor="50" AnchorPane.topAnchor="60" styleClass="green-theme"/>



    <TextField fx:id="keywordsField" onMouseClicked="#enter" promptText="请输入关键字" AnchorPane.leftAnchor="300" AnchorPane.topAnchor="60" />



    <Button onAction="#keywordsField" styleClass="green-theme" text="查询" AnchorPane.leftAnchor="600" AnchorPane.topAnchor="60" />

    <Button onAction="#export" styleClass="black-theme" text="导出数据" AnchorPane.leftAnchor="300" AnchorPane.topAnchor="5" />

</AnchorPane>
